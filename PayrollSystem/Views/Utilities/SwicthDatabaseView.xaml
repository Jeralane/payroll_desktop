<Window x:Class="PayrollSystem.Views.Utilities.SwicthDatabaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SwicthDatabaseView"
        Width="300"
        Height="300"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="txtServer"
                 Width="213"
                 Height="23"
                 Margin="40,54,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Name="label1"
               Height="28"
               Margin="40,20,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Server" />
        <TextBox Name="txtDatabase"
                 Width="213"
                 Height="23"
                 Margin="40,133,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        <Label Name="label2"
               Height="28"
               Margin="40,99,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Database" />
        <Button Name="btnApply"
                Width="75"
                Height="23"
                Margin="194,224,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Apply" />
    </Grid>
</Window>
