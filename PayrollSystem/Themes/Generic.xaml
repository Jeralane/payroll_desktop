<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:l="clr-namespace:PayrollSystem.UserControls"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Padding" Value="1" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
        <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
        <Setter Property="Height" Value="26" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.09"
                                                        Storyboard.TargetName="BgBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="White" />
                                        <ColorAnimation Duration="0:0:0.09"
                                                        Storyboard.TargetName="BordBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#87bff0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0"
                                                        Storyboard.TargetName="BgBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#EAEAEA" />
                                        <DoubleAnimation Duration="0:0:0"
                                                         Storyboard.TargetName="PART_ContentHost"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         To="0.6" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.09"
                                                        Storyboard.TargetName="BgBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="White" />
                                        <ColorAnimation Duration="0:0:0.09"
                                                        Storyboard.TargetName="BordBrush"
                                                        Storyboard.TargetProperty="Color"
                                                        To="#87bff0" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="ReadOnly" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border BorderThickness="1">
                            <Border.Background>
                                <SolidColorBrush x:Name="BgBrush" Color="#F9F9F9" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush x:Name="BordBrush" Color="LightGray" />
                            </Border.BorderBrush>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="2"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

