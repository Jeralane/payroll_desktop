<Window x:Class="PayrollSystem.Views.TaxGroups.TaxGroupsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PayrollSystem.Views.TaxGroups"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="TaxGroupsList"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:TaxGroupsViewModel />
    </Window.DataContext>
    <Grid Width="760" Height="570">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Background="WhiteSmoke">
            <StackPanel Width="36"
                        Margin="8,12,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical"
                        d:LayoutOverrides="Height">
                <Image Source="/PayrollSystem;component/Images/active_directory.png" Stretch="None" />
            </StackPanel>
            <StackPanel Margin="48,8,8,8"
                        Orientation="Vertical"
                        d:LayoutOverrides="Height">
                <TextBlock FontSize="13.333"
                           FontWeight="Bold"
                           Text="Tax Groups"
                           TextWrapping="WrapWithOverflow"
                           d:LayoutOverrides="Width" />
                <TextBlock Text="Here is a list of all Tax Groups. To filter, type in the Tax Group Name"
                           TextWrapping="WrapWithOverflow"
                           d:LayoutOverrides="Width" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Height="26"
              Margin="8,12,8,0"
              VerticalAlignment="Bottom">
            <TextBlock Width="120"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Text="Filter by keyword" />
            <TextBox Name="txtFilterByKeyword"
                     Margin="120,0,84,0"
                     TextWrapping="Wrap" />
            <Button Name="btnRefresh"
                    Width="80"
                    HorizontalAlignment="Right"
                    Content="Refresh" />
        </Grid>
        <DataGrid x:Name="dataGrid1"
                  Grid.Row="2"
                  Margin="8"
                  AutoGenerateColumns="False"
                  HorizontalGridLinesBrush="WhiteSmoke"
                  IsReadOnly="True"
                  ItemsSource="{Binding Collection}"
                  RowHeaderWidth="8"
                  SelectedItem="{Binding SelectedItem}"
                  VerticalGridLinesBrush="WhiteSmoke">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="#" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding TaxGroupName}"
                                    Header="Tax Group Name" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3"
              Height="26"
              Margin="8,0,8,8"
              VerticalAlignment="Bottom">
            <Button x:Name="btnAdd"
                    Width="80"
                    HorizontalAlignment="Left"
                    Content="Add" />
            <Button x:Name="btnEdit"
                    Width="80"
                    Margin="84,0,0,0"
                    HorizontalAlignment="Left"
                    Content="Edit" />
            <Button x:Name="btnDelete"
                    Width="80"
                    Margin="168,0,0,0"
                    HorizontalAlignment="Left"
                    Content="Delete" />
        </Grid>
    </Grid>
</Window>
