<Window x:Class="PayrollSystem.Views.WithholdingTaxDeductions.WithholdingTaxDeductionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:payroll="clr-namespace:PayrollSystem.Models"
        x:Name="Window"
        Title="Withholding Tax Deduction Details"
        Background="{DynamicResource WithholdingTaxDeductionModuleColor}"
        Icon="/PayrollSystem;component/Images/hotel.png"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.DataContext>
        <payroll:WithholdingTaxDeduction />
    </Window.DataContext>
    <Grid Width="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="Data"
                    Margin="16,16,16,32"
                    d:LayoutOverrides="Width, Height">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12" />

                    <RowDefinition Height="Auto" />
                    <RowDefinition Name="r01" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r02" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r03" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r04" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r05" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r06" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r07" Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Name="r08" Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.ColumnSpan="4"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="Tax Group"
                           d:LayoutOverrides="Height" />
                <ComboBox x:Name="cboTaxGroup"
                          Grid.Row="1"
                          Grid.ColumnSpan="7"
                          Background="White"
                          DisplayMemberPath="Description"
                          SelectedValue="{Binding Path=TaxGroupId}"
                          SelectedValuePath="Id"
                          d:LayoutOverrides="Width">
                    <ComboBox.BorderBrush>
                        <SolidColorBrush Color="{DynamicResource BorderMediumColor}" />
                    </ComboBox.BorderBrush>
                </ComboBox>
                <StackPanel Grid.Column="4"
                            Grid.ColumnSpan="3"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <TextBlock Margin="0,0,16,2"
                               VerticalAlignment="Bottom"
                               FontWeight="Bold"
                               Style="{DynamicResource AttributeLabelLight}"
                               Text="Type" />
                    <RadioButton x:Name="optMonthly"
                                 Margin="0,0,12,2"
                                 VerticalAlignment="Bottom"
                                 Content="Monthly"
                                 Foreground="{DynamicResource LightCaptionColor}" />
                    <RadioButton x:Name="optSemiMonthly"
                                 Margin="0,0,12,2"
                                 VerticalAlignment="Bottom"
                                 Content="Semi Monthly"
                                 Foreground="{DynamicResource LightCaptionColor}" />
                    <RadioButton x:Name="optWeekly"
                                 Margin="0,0,12,2"
                                 VerticalAlignment="Bottom"
                                 Content="Weekly"
                                 Foreground="{DynamicResource LightCaptionColor}" />
                    <RadioButton x:Name="optDaily"
                                 Margin="0,0,8,2"
                                 VerticalAlignment="Bottom"
                                 Content="Daily"
                                 Foreground="{DynamicResource LightCaptionColor}" />
                </StackPanel>
                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="7"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="Group"
                           d:LayoutOverrides="Width, Height" />
                <TextBlock Grid.Row="4"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="1"
                           d:LayoutOverrides="Width, Height" />
                <TextBlock Grid.Row="3"
                           Grid.Column="2"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="Exemption"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="4"
                         Grid.Column="2"
                         Text="{Binding Exemption1,
                                        Converter={StaticResource DecimalConverter}}" />
                <TextBlock Grid.Row="3"
                           Grid.Column="4"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="Percent Multiplier"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="4"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier1,
                                        Converter={StaticResource DecimalConverter}}" />
                <TextBlock Grid.Row="3"
                           Grid.Column="6"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="Basic Pay Minuend"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="4"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend1,
                                        Converter={StaticResource DecimalConverter}}" />
                <TextBlock Grid.Row="6"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="2"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="6"
                         Grid.Column="2"
                         Text="{Binding Exemption2,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="6"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier2,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="6"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend2,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="8"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="3"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="8"
                         Grid.Column="2"
                         Text="{Binding Exemption3,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="8"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier3,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="8"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend3,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="10"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="4"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="10"
                         Grid.Column="2"
                         Text="{Binding Exemption4,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="10"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier4,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="10"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend4,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="12"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="5"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="12"
                         Grid.Column="2"
                         Text="{Binding Exemption5,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="12"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier5,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="12"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend5,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="14"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="6"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="14"
                         Grid.Column="2"
                         Text="{Binding Exemption6,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="14"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier6,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="14"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend6,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="16"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="7"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="16"
                         Grid.Column="2"
                         Text="{Binding Exemption7,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="16"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier7,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="16"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend7,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBlock Grid.Row="18"
                           FontWeight="Bold"
                           Style="{DynamicResource AttributeLabelLight}"
                           Text="8"
                           d:LayoutOverrides="Width, Height" />
                <TextBox Grid.Row="18"
                         Grid.Column="2"
                         Text="{Binding Exemption8,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="18"
                         Grid.Column="4"
                         Text="{Binding PercentMultiplier8,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
                <TextBox Grid.Row="18"
                         Grid.Column="6"
                         Text="{Binding BasicPayMinuend8,
                                        Converter={StaticResource DecimalConverter},
                                        StringFormat=\{0:N\}}" />
            </Grid>
        </StackPanel>
        <Border Grid.Row="1">
            <Border.Background>
                <SolidColorBrush Color="#1E000000" />
            </Border.Background>
        </Border>
        <StackPanel x:Name="Action"
                    Grid.Row="1"
                    Margin="8"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button x:Name="btnSave"
                    Width="75"
                    Margin="0,0,4,0"
                    Content="Save" />
            <Button x:Name="btnCancel"
                    Width="75"
                    Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>