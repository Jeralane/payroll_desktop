<Window x:Class="PayrollSystem.Views.TaxGroups.TaxGroupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:payroll="clr-namespace:PayrollSystem.Models"
        x:Name="window"
        Title="Tax Group"
        Icon="/PayrollSystem;component/Images/group.png"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource TaxGroupModuleColor}">
    <Window.DataContext>
        <payroll:TaxGroup />
    </Window.DataContext>
    <Grid Height="132">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1" >
        	<Border.Background>
        		<SolidColorBrush Color="#1E000000"/>
        	</Border.Background>
        </Border>
        <StackPanel x:Name="Data"
                    Grid.Row="0"
                    Width="300"
                    Margin="16,16,16,8">
            <TextBlock Style="{DynamicResource AttributeLabelLight}" Text="Description" />
            <TextBox x:Name="textBox1"
                     Text="{Binding Description}" />
        </StackPanel>
        <StackPanel x:Name="Action"
                    Grid.Row="1"
                    Margin="8"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button x:Name="btnSave"
                    Width="75"
                    Margin="0,0,4,0"
                    Content="Save" />
            <Button x:Name="btnCancel"
                    Width="75"
                    Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>