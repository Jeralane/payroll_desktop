<Window x:Class="PayrollSystem.Views.Users.UsersList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PayrollSystem.Views.Users"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Users List"
        Icon="/PayrollSystem;component/Images/reviewer.png"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ButtonElementStyle" TargetType="{x:Type StackPanel}">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>
	<Window.Background>
		<SolidColorBrush Color="#FFAEC6CF"/>
	</Window.Background>
    <Window.DataContext>
        <local:UsersViewModel />
    </Window.DataContext>
    <Grid Width="760" Height="570">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Background="#1E000000">
            <StackPanel Margin="8" Orientation="Horizontal">
                <StackPanel Margin="4,4,4,4" Style="{DynamicResource ButtonElementStyle}">
                    <StackPanel Width="26" Height="26">
                        <Image Source="/PayrollSystem;component/Images/reviewer.png" />
                    </StackPanel>
                    <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                        <TextBlock Style="{DynamicResource ModuleTitle}" Text="Users List" />
                        <TextBlock Style="{DynamicResource ModuleDescription}" Text="Here is a list of all Users. To filter the grid type into the Filter by keyword textbox the User Name then click Refresh." />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Height="26"
              Margin="8,12,8,0"
              VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="Filter by keyword" Foreground="{DynamicResource CaptionColor}" />
            <TextBox Name="txtFilterByKeyword"
                     Grid.Column="1"
                     Margin="6,0"
                     VerticalContentAlignment="Center"
                     Padding="2" />
            <Button Name="btnRefresh"
                    Grid.Column="2"
                    Content="Refresh" />
        </Grid>
        <DataGrid x:Name="dataGrid1"
                  Grid.Row="2"
                  Margin="8"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  HorizontalGridLinesBrush="WhiteSmoke"
                  IsReadOnly="True"
                  ItemsSource="{Binding Collection}"
                  SelectedItem="{Binding SelectedItem}"
                  SelectionMode="Single"
                  VerticalGridLinesBrush="WhiteSmoke">
            <DataGrid.BorderBrush>
                <SolidColorBrush Color="{DynamicResource BorderMediumColor}"/>
            </DataGrid.BorderBrush>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="#" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Name}"
                                    Header="User Name" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding AccessLevel}"
                                    Header="Access Level" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3"
              Height="26"
              Margin="8,0,8,8"
              VerticalAlignment="Bottom">
            <Button x:Name="btnAdd"
                    Width="80"
                    HorizontalAlignment="Left"
                    Content="Add" />
            <Button x:Name="btnEdit"
                    Width="80"
                    Margin="84,0,0,0"
                    HorizontalAlignment="Left"
                    Content="Edit" />
            <Button x:Name="btnDelete"
                    Width="80"
                    Margin="168,0,0,0"
                    HorizontalAlignment="Left"
                    Content="Delete" />
            <Button x:Name="btnResetPassword"
                    Width="100"
                    HorizontalAlignment="Right"
                    Content="Reset Password" />
        </Grid>
    </Grid>
</Window>
